<UserControl x:Class="WorldCupVisualizerWPF.PlayerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldCupVisualizerWPF"
             mc:Ignorable="d" 
             Style="{StaticResource ResourceKey=playerBackground}"
             Padding="5"
             Margin="5"
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Cursor="Hand">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="lbName" Content="Name" Grid.Row="0" Foreground="Black" HorizontalContentAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontFamily="Century Gothic"/>
        <Image x:Name="imgPlayer" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" MaxHeight="75" MaxWidth="75" />
    </Grid>
</UserControl>
